<% layout('layout') %>

<!-- Hero Section -->
<section class="hero">
  <div class="hero-content container">
    <div class="hero-text">
      <h1>All your files,<br/>one secure place.</h1>
      <p class="lead">
        Upload, share, and manage your files effortlessly with our modern, feature-rich CDN. Free forever.
      </p>
      <a href="/signup" class="btn-cta">Get Started</a>
    </div>
    <div class="hero-image">
      <img src="/public/img/hero-mockup.png" alt="App mockup"/>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="features container">
  <h2 class="section-title">Powerful Features</h2>
  <div class="feature-grid">
    <div class="feature">
      <div class="icon">📁</div>
      <h3>Simple Uploads</h3>
      <p>Drag & drop or one-click uploads—get your files online in seconds.</p>
    </div>
    <div class="feature">
      <div class="icon">🔒</div>
      <h3>Secure Access</h3>
      <p>Password-protect or expire links—your data stays under your control.</p>
    </div>
    <div class="feature">
      <div class="icon">⚡️</div>
      <h3>Global CDN</h3>
      <p>Blazing-fast delivery powered by edge caching around the world.</p>
    </div>
    <div class="feature">
      <div class="icon">📊</div>
      <h3>Real-time Analytics</h3>
      <p>Track views, bandwidth, and popular files with an intuitive dashboard.</p>
    </div>
  </div>
</section>
