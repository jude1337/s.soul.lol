<% layout('layout') %>

<div class="container">
  <div class="card">
    <!-- Image Preview -->
    <img
      src="/uploads/<%= file.filename %>"
      alt="<%= file.original %>"
    />

    <!-- Caption Area -->
    <div class="file-info">
      <h2><%= file.original %></h2>
      <p>
        Uploaded by
        <strong><%= file.uploader.username %></strong>
        on
        <time datetime="<%= file.createdAt.toISOString() %>">
          <%= file.createdAt.toLocaleString() %>
        </time>
      </p>
    </div>
  </div>
</div>
